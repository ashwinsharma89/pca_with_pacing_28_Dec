# PCA Agent - Complete Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI/ML API KEYS
# =============================================================================

# OpenAI API Key (Required for Q&A system)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (Optional, for Claude-based analysis)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Choose which AI provider to use (openai or anthropic)
USE_ANTHROPIC=false

# =============================================================================
# DATA SOURCES
# =============================================================================

# Default data source path for automated reports
DATA_SOURCE_PATH=C:\Users\asharm08\OneDrive - dentsu\Desktop\AI_Agent\Data\Sitevisit.csv

# Database connection (if using database instead of CSV)
# DATABASE_URL=postgresql://user:password@localhost:5432/pca_agent

# =============================================================================
# EMAIL CONFIGURATION (for automated reports)
# =============================================================================

# SMTP Server Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Email Credentials
# For Gmail: Use App Password (not regular password)
# https://support.google.com/accounts/answer/185833
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Report Recipients (comma-separated)
REPORT_RECIPIENTS=analyst1@company.com,manager@company.com,executive@company.com

# =============================================================================
# SLACK INTEGRATION (Optional, for alerts)
# =============================================================================

# Slack Webhook URL for alerts
# Get from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack Channel for alerts
SLACK_CHANNEL=#campaign-alerts

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================

# Weekly report schedule (day and time)
WEEKLY_REPORT_DAY=monday
WEEKLY_REPORT_TIME=09:00

# Daily alerts schedule (time)
DAILY_ALERTS_TIME=08:00

# =============================================================================
# PERFORMANCE THRESHOLDS (for alerts)
# =============================================================================

# CPA increase threshold (percentage)
CPA_ALERT_THRESHOLD=20

# Conversion decline threshold (percentage)
CONVERSION_ALERT_THRESHOLD=15

# ROAS decline threshold (percentage)
ROAS_ALERT_THRESHOLD=10

# =============================================================================
# PREDICTIVE ANALYTICS CONFIGURATION
# =============================================================================

# Forecast confidence level (0.0 to 1.0)
FORECAST_CONFIDENCE=0.70

# Number of historical months to use for forecasting
FORECAST_LOOKBACK_MONTHS=6

# =============================================================================
# REPORT CUSTOMIZATION
# =============================================================================

# Company name (for reports)
COMPANY_NAME=Your Company Name

# Report branding color (hex code)
BRAND_COLOR=#667eea

# Include charts in email reports (true/false)
INCLUDE_CHARTS_IN_EMAIL=true

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum rows to return in Q&A results
MAX_QUERY_RESULTS=1000

# Query timeout (seconds)
QUERY_TIMEOUT=60

# Enable caching for Q&A results (true/false)
ENABLE_QUERY_CACHE=true

# Cache expiration (seconds)
CACHE_EXPIRATION=3600

# =============================================================================
# PLATFORM API KEYS (Optional, for live data integration)
# =============================================================================

# Google Ads API
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token

# Meta Ads API
META_ADS_ACCESS_TOKEN=your_access_token
META_ADS_APP_ID=your_app_id
META_ADS_APP_SECRET=your_app_secret

# LinkedIn Ads API
LINKEDIN_ADS_ACCESS_TOKEN=your_access_token

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit .env file to version control
# 2. Use strong, unique passwords
# 3. Rotate API keys regularly
# 4. For Gmail: Enable 2FA and use App Passwords
# 5. Test email configuration before scheduling reports
