# Frontend Production Environment Variables
# Copy this file to .env.production and update with your production values

# ============================================================================
# API Configuration
# ============================================================================

# Production API URL (without trailing slash)
NEXT_PUBLIC_API_URL=https://your-api.com

# Production WebSocket URL (without trailing slash)
NEXT_PUBLIC_WS_URL=wss://your-api.com

# ============================================================================
# Feature Flags
# ============================================================================

# Enable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable WebSocket real-time features
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Enable debug mode (set to false in production)
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================================
# Optional: Third-Party Services
# ============================================================================

# Google Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================================================
# Build Configuration
# ============================================================================

# Next.js build output
# NEXT_PUBLIC_BUILD_ID=production-v1.0.0
