[Unit]
Description=PCA Agent Backup Scheduler
After=network.target

[Service]
Type=simple
User=pca-agent
WorkingDirectory=/opt/pca_agent
Environment="BACKUP_DIR=/var/backups/pca_agent"
Environment="BACKUP_RETENTION_DAYS=30"
Environment="BACKUP_SCHEDULE_TIME=02:00"
ExecStart=/usr/bin/python3 scripts/backup_scheduler.py
Restart=on-failure
RestartSec=60

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=pca-backup

[Install]
WantedBy=multi-user.target
