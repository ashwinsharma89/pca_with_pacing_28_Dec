# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangSmith (Optional - for tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=pca-agent

# Database Configuration
# PostgreSQL (Production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pca_agent
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600



# DuckDB (Development - default, no setup required)
# Data stored in: data/analytics.duckdb and data/campaigns.parquet
# Fast analytics, columnar storage, works out of the box
USE_DUCKDB=true

# Legacy (kept for backward compatibility)
DATABASE_URL=postgresql://user:password@localhost:5432/pca_db

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true

# Storage
UPLOAD_DIR=./data/uploads
REPORT_DIR=./data/reports
SNAPSHOT_DIR=./data/snapshots

# API Configuration
# SECURITY: Change API_HOST to 0.0.0.0 ONLY if deploying to production with proper firewall
# For local development, use 127.0.0.1 (localhost only)
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=4
DEBUG=true

# JWT Authentication
# CRITICAL: Generate a secure random secret for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secure-random-secret-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Configuration
# Comma-separated list of allowed origins (NEVER use * in production!)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production Mode
# Set to 'true' in production to enforce strict security checks
PRODUCTION_MODE=false

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Model Configuration
DEFAULT_VLM_MODEL=gpt-4-vision-preview
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
TEMPERATURE=0.1
MAX_TOKENS=4096

# Report Configuration
DEFAULT_TEMPLATE=corporate
BRAND_COLOR=#0066CC
COMPANY_NAME=Your Company
COMPANY_LOGO_PATH=./assets/logo.png

# Processing Limits
MAX_UPLOAD_SIZE_MB=50
MAX_SNAPSHOTS_PER_CAMPAIGN=20
CONCURRENT_VISION_CALLS=3

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_OCR=true
ENABLE_CHART_RECREATION=true
ENABLE_ACHIEVEMENT_DETECTION=true
ENABLE_CROSS_CHANNEL_REASONING=true

# Privacy & Anonymization
# Controls how sensitive data is protected before sending to external LLM APIs
# Options: none, light, moderate, strict
# - none: No anonymization (all data sent as-is)
# - light: Campaign names, client names, brand names tokenized
# - moderate: Light + geographic data, creative names, ad groups (RECOMMENDED)
# - strict: All identifiable fields + audience segments, placements
ANONYMIZATION_LEVEL=moderate

# =============================================================================
# Ad Platform API Connectors
# =============================================================================
# Set AD_CONNECTORS_MOCK_MODE=true for testing without real credentials

AD_CONNECTORS_MOCK_MODE=true

# Google Ads API
# Get credentials from: https://developers.google.com/google-ads/api/docs/first-call/overview
GOOGLE_ADS_CUSTOMER_ID=
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=

# Meta (Facebook/Instagram) Ads API
# Get credentials from: https://developers.facebook.com/docs/marketing-api/overview
META_ADS_APP_ID=
META_ADS_APP_SECRET=
META_ADS_ACCESS_TOKEN=
META_ADS_AD_ACCOUNT_ID=

# Google Marketing Platform (Campaign Manager 360 & DV360)
# Uses Service Account authentication
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_SERVICE_ACCOUNT_PATH=

# Campaign Manager 360 specific
CM360_PROFILE_ID=

# Display & Video 360 specific  
DV360_PARTNER_ID=
DV360_ADVERTISER_ID=
